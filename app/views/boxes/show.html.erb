<div class="product-page">
  <div class="section">
    <div class="container">

        <div class="row">
          <div class="columns">
            <div class="column box subbox" id="subbox1">
              <%= image_tag("box-1.png", :alt => "box") %>
            </div>
            <div class="column box-details">
              <h1><strong><%= @box.name %></strong> Box</h1>
              <h2 class="box-price">$<%= @box.price %></h2>
              <hr>
              <p><%= @box.description %></p>
            </div>
          </div>
        </div>
        <hr>
        <div class="box box-reviews">
          <% @box.reviews.each do |review| %>
            <strong>Author: </strong><%= review.name %>
            <br>
            <strong>Text: </strong><%= review.review %>
            <br>
            <strong>Rating: </strong><%= review.rating %>
            <hr>
          <% end %>
        </div>


    </div>
  </div>
</div>