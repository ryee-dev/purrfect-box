<div class="section">
  <div class="container">
    <h1 class="title is-2">Our Boxes</h1>
    <div class="box">
    <% @boxes.each do |box| %>
      <div class="row">
        <div class="columns">
          <div class="box">
            <div class="column subbox" id="subbox1">
              <%= link_to image_tag("box-1.png", :alt => "box"), boxes_path(box), class: "box-image" %>
            </div>
            <div class="column box-label">
              <%= box.name %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>