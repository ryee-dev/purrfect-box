<div class="home-page">
  <div class="home-header">
    <h1 class="title is-2"><%= link_to image_tag("logo.png", :alt => "logo"), root_path, id: "logo" %></h1>
  </div>
  <div class="home-body">

    <div class="section">
      <div class="container home-boxes">

        <div class="box" id="top-boxes">
          <h3 class="title is-4">Our most reviewed box.</h3>
          <div class="row columns">
            <div class="column">
              <%= link_to image_tag("box-1.png", :alt => "box"), box_path(@most_reviewed) %>
            </div>
            <div class="column">
              <h3><strong><%= @most_reviewed.color %> <%= @most_reviewed.name %></strong> Box</h3>
              <p><%= @most_reviewed.reviews.length %> reviews</p>
              <br>
              <p><%= @most_reviewed.description %></p>
            </div>
          </div>
        </div>

        <div class="box" id="recent-boxes">
          <h3 class="title is-4">Our most recently added boxes.</h3>
          <div class="row">
            <div class="columns">
              <% @boxes.three_most_recent.each do |box| %>
                <div class="column box subbox" id="subbox1">
                  <%= link_to image_tag("box-1.png", :alt => "box"), box_path(box) %>
                  <p><strong><%= box.color %> <%= box.name %></strong> Box</p>
                  <p>$<%= box.price %></p>
                  <p class="review-amount"><%= box.reviews.length %> reviews</p>
                </div>
              <% end %>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>