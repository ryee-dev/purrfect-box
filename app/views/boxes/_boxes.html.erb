<div class="owl-carousel owl-theme">
  <% @boxes.each do |box| %>
    <div class="item">
      <div class="box-image">
        <%= link_to image_tag("box-1.png", :alt => "box"), box_path(box) %>
      </div>
      <div class="box-label">
        <p><%= box.name %> Box</p>
      </div>
      <div class="box-label box-price">
        $<%= box.price %>
      </div>
      <div class="edit-butt" data-no-turbolink>
      <%= link_to "Edit", edit_box_path(box), class: "button is-secondary is-small is-rounded edit-box" %>
      </div>
    </div>
  <% end %>
</div>