<div class="login-page">
  <div class="hero container box">
    <h2>Log In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <p>
          <%= f.label :username, class: "label" %>
          <%= f.text_field :login, class: "input" %>
        </p>
      </div>
      <br>
      <div class="field">
        <%= f.label :password, class: "label" %>
        <%= f.password_field :password, autocomplete: "off", class: "input" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me, class: "checkbox" %>
          <%= f.label :remember_me, class: "checkbox" %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "button is-info is-rounded is-large action-butt" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>